{% extends 'amforms/_layouts/settings' %}

{% set title = 'General'|t %}
{% set selectedTab = 'general' %}

{% block fields %}
    {{ forms.textField({
        label: general.pluginName.name|t,
        id: general.pluginName.handle,
        name: general.pluginName.handle,
        value: general.pluginName.value,
        instructions: 'Plugin name for the end user.'|t
    }) }}
    {{ forms.lightswitchField({
        label: general.quietErrors.name|t,
        id: general.quietErrors.handle,
        name: general.quietErrors.handle,
        on: general.quietErrors.value,
        instructions: 'Whether to silently log an error or throw an exception if a form does not exist. By default, it will throw an exception.'|t
    }) }}
    {{ forms.textField({
        label: general.fieldsPerSet.name|t,
        id: general.fieldsPerSet.handle,
        name: general.fieldsPerSet.handle,
        value: general.fieldsPerSet.value,
        instructions: 'The amount of fields per set in the form layout designer.'|t
    }) }}
    {{ forms.lightswitchField({
        label: general.useMandrillForEmail.name|t,
        id: general.useMandrillForEmail.handle,
        name: general.useMandrillForEmail.handle,
        on: general.useMandrillForEmail.value,
        instructions: 'Switching this on will require a&m mailer in order to work.'|t
    }) }}
    {{ forms.textField({
        label: general.bccEmailAddress.name|t,
        id: general.bccEmailAddress.handle,
        name: general.bccEmailAddress.handle,
        value: general.bccEmailAddress.value,
        instructions: 'Who will receive a copy of each notification? Enter comma separated email addresses for more recipients.'|t
    }) }}
{% endblock %}
